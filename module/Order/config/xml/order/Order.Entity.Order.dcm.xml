<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Order\Entity\Order" table="`order`">

        <id name="id" type="integer" column="order_id" unique="true" length="10">
            <generator strategy="AUTO" />
        </id>

        <field name="client" type="integer" length="10" unsigned="true" />
        <field name="manager" type="integer" length="10" unsigned="true" />
        <field name="calculation" type="integer" length="10" unsigned="true" />
        <field name="state" type="smallint" length="5" unsigned="true" />

    </mapped-superclass>

</doctrine-mapping>
